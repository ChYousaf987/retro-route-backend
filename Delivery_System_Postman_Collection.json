{
  "info": {
    "name": "Retro Route - Delivery System",
    "description": "API collection for the delivery system with driver management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Customer APIs",
      "item": [
        {
          "name": "Create Order (with delivery date)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"addressId\": \"YOUR_ADDRESS_ID\",\n    \"deliveryCharges\": 50,\n    \"scheduledDeliveryDate\": \"2026-01-20\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/order/create-order",
              "host": ["{{baseUrl}}"],
              "path": ["order", "create-order"]
            },
            "description": "Customer creates an order with scheduled delivery date"
          }
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/order/get-all-orders",
              "host": ["{{baseUrl}}"],
              "path": ["order", "get-all-orders"]
            },
            "description": "Customer gets all their orders"
          }
        }
      ]
    },
    {
      "name": "Admin APIs - Driver Management",
